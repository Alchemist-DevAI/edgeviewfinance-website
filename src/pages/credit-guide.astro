---
import Layout from "../layout/Layout.astro";
import SecuritySummaryBox from "../components/SecuritySummaryBox.astro";

// Trust badges data for hero section
const trustBadges = [
  {
    title: "Licensed Specialist",
    subtitle: "ACL 459287",
    description: "Australian Credit Licence Holder",
    icon: "shield"
  },
  {
    title: "Experience",
    subtitle: "20+ Years",
    description: "Banking & Finance Industry Experience",
    icon: "experience"
  },
  {
    title: "Lender Access",
    subtitle: "40+ Lenders",
    description: "Specialist Business & Home Loan Panel",
    icon: "network"
  },
  {
    title: "Client Protection",
    subtitle: "Best Interest Duty",
    description: "Your Interests Come First, Always",
    icon: "protection"
  }
];

// Quick navigation items
const navigationItems = [
  { text: "About Your Broker", href: "#about-broker" },
  { text: "Our Lender Panel", href: "#lender-relationships" },
  { text: "Fees & Commissions", href: "#fees-commissions" },
  { text: "Your Rights & Protections", href: "#rights-protections" }
];

// Summary box content
const summaryContent = {
  title: "Credit Guide Summary",
  items: [
    "Complete transparency about how we work and how we're paid",
    "Your rights and protections under Australian Credit Law",
    "Our commitment to act in your best interests at all times",
    "Access to 40+ specialist lenders through our panel relationships"
  ]
};
---

<Layout 
  title="Credit Guide | Edgeview Finance - Australian Credit Licence 459287"
  description="Our Credit Guide explains how we work, who we work with, and how we're paid. Complete transparency and regulatory compliance for your peace of mind."
>
  <main class="main-wrapper relative overflow-hidden">

    <!-- Hero Section -->
    <section class="py-12 md:py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <!-- Hero Content -->
        <div class="mx-auto max-w-4xl text-center">
          <h1 class="text-5xl font-bold tracking-tight text-slate-900">
            How do we ensure your interests come first?
          </h1>
          <p class="mx-auto mt-6 max-w-3xl text-xl leading-8 text-slate-600">
            Our Credit Guide explains exactly how we work, who we work with, and how we're paid - because transparency builds trust in every business relationship.
          </p>

        </div>

        <!-- Trust Badges -->
        <div class="mt-12 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
          {trustBadges.map((badge) => (
            <div class="trust-badge bg-green-50 border border-green-500 rounded-lg shadow-sm p-4 flex items-center gap-3">
              <div class="badge-icon text-green-600">
                {badge.icon === 'shield' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                )}
                {badge.icon === 'experience' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {badge.icon === 'network' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                )}
                {badge.icon === 'protection' && (
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                  </svg>
                )}
              </div>
              
              <div class="badge-content">
                <div class="badge-title text-sm font-bold text-[#1C2C3B] leading-tight">
                  {badge.title}
                </div>
                <div class="badge-subtitle text-gray-600 text-xs leading-tight">
                  {badge.subtitle}
                </div>
              </div>
            </div>
          ))}
        </div>

        <!-- Quick Navigation Pills -->
        <div class="mt-10">
          <div class="quick-nav flex justify-center gap-3 flex-wrap">
            {navigationItems.map((item) => (
              <a href={item.href} class="quick-nav-pill bg-white border border-gray-300 rounded-full px-5 py-2 text-sm text-gray-700 hover:bg-orange-500 hover:text-white hover:border-orange-500 transition-all">
                {item.text}
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Entity Consistency Notice -->
    <section class="py-8 bg-slate-50">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-4xl">
          <div class="bg-gray-50 border-l-4 border-orange-500 p-4 rounded-md">
            <p class="text-sm font-medium text-gray-700">
              <strong>IMPORTANT NOTICE:</strong> Edgeview Finance is a trading name of <strong>Edgeview Mortgages Pty Ltd</strong> (ACN 167 233 712) Australian Credit Licence 459287. This Credit Guide meets all requirements under the National Consumer Credit Protection Act 2009 and provides you with important information about our services, relationships, and obligations.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Summary Box -->
    <section class="py-12">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-4xl">
          <SecuritySummaryBox
            title={summaryContent.title}
            items={summaryContent.items}
          />
        </div>
      </div>
    </section>

    <!-- About Your Broker -->
    <section id="about-broker" class="py-12 md:py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-4xl">
          <h2 class="text-4xl font-bold tracking-tight text-slate-900 mb-8">
            About Your Broker
          </h2>

          <!-- Personal Introduction -->
          <div class="prose max-w-none text-slate-600 mb-8">
            <p class="text-sm leading-relaxed">
              Meet <strong>Daniel Peters</strong> (Known as: Dan), your Australian Credit Representative and the principal of Edgeview Finance. With over 20 years in banking and finance, Dan brings deep industry expertise and a genuine commitment to putting your interests first.
            </p>
          </div>

          <!-- Contact Information Box -->
          <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm mb-8">
            <h3 class="text-xl font-semibold text-slate-900 mb-4">Daniel Peters</h3>
            <p class="text-sm text-slate-600 mb-4">Australian Credit Representative</p>
            <div class="space-y-3">
              <div class="flex items-center">
                <svg class="h-5 w-5 text-slate-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="text-sm font-medium">dan.peters@edgeviewfinance.com.au</span>
              </div>
              <div class="flex items-center">
                <svg class="h-5 w-5 text-slate-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <span class="text-sm font-medium">1300 280 895</span>
              </div>
              <div class="flex items-center">
                <svg class="h-5 w-5 text-slate-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6" />
                </svg>
                <span class="text-sm font-medium">20+ Years Finance Industry Experience</span>
              </div>
            </div>
          </div>

          <!-- Our Commitment Section -->
          <div class="bg-gray-50 border border-gray-200 rounded-xl p-8 mb-8">
            <div class="flex items-center gap-3 text-2xl font-bold text-[#1C2C3B] mb-6">
              <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
              OUR COMMITMENT TO YOU
            </div>
            <div class="text-gray-700">
              <p class="text-sm mb-4">When you work with Edgeview Finance, you can count on us to:</p>
              <ul class="space-y-3">
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <div class="text-sm text-gray-700 leading-relaxed">
                    <strong class="text-[#1C2C3B]">Act in your best interests at all times</strong> - it's not just our legal obligation, it's how we've built our reputation
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <div class="text-sm text-gray-700 leading-relaxed">
                    <strong class="text-[#1C2C3B]">Provide clear, honest advice about your options</strong> - no jargon, no confusion, just straight talk about what works for your situation
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <div class="text-sm text-gray-700 leading-relaxed">
                    <strong class="text-[#1C2C3B]">Maintain professional standards and competency</strong> - through ongoing training and industry involvement
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <div class="text-sm text-gray-700 leading-relaxed">
                    <strong class="text-[#1C2C3B]">Respect your privacy and handle information securely</strong> - your financial information deserves the highest protection
                  </div>
                </li>
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <div class="text-sm text-gray-700 leading-relaxed">
                    <strong class="text-[#1C2C3B]">Support you throughout the entire process</strong> - from initial consultation through settlement and beyond
                  </div>
                </li>
              </ul>
            </div>
          </div>

          <div class="prose max-w-none text-slate-600">
            <p class="mb-4 text-sm leading-relaxed">
              Dan's background includes senior roles at major Australian banks and over 11 years as a specialist commercial finance broker. This combination of corporate banking experience and independent broking gives you the benefit of insider knowledge with personalised service.
            </p>
            <p class="font-medium text-slate-800 text-sm">
              <strong>What this means for you:</strong> You're working with someone who understands both sides of the lending equation - what banks need to say yes, and what business owners need to succeed.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Lender Relationships -->
    <section id="lender-relationships" class="py-12 md:py-16 bg-slate-50">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-4xl">
          <h2 class="text-4xl font-bold tracking-tight text-slate-900 mb-8">
            Our Lender Relationships
          </h2>

          <div class="text-center mb-10">
            <p class="text-sm text-slate-600 max-w-3xl mx-auto">
              We maintain active relationships with over 40 specialist lenders, giving you access to competitive rates and products you won't find going direct to a single bank.
            </p>
          </div>

          <!-- Lender Categories -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
            <!-- Major Banks -->
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
              <h3 class="text-xl font-semibold text-slate-900 mb-4">Major Banks</h3>
              <ul class="space-y-2 text-sm text-slate-600">
                <li>• Commonwealth Bank</li>
                <li>• Westpac</li>
                <li>• ANZ</li>
                <li>• NAB</li>
                <li>• Judo Bank</li>
                <li class="pt-2 text-xs text-slate-500">
                  + many more
                </li>
              </ul>
            </div>

            <!-- Non-Bank Lenders -->
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
              <h3 class="text-xl font-semibold text-slate-900 mb-4">Non-Bank Lenders</h3>
              <ul class="space-y-2 text-sm text-slate-600">
                <li>• Resimac</li>
                <li>• Liberty Financial</li>
                <li>• La Trobe Financial</li>
                <li>• RedZed</li>
                <li>• Pepper Money</li>
                <li class="pt-2 text-xs text-slate-500">
                  + many more
                </li>
              </ul>
            </div>

            <!-- Commercial Specialists -->
            <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
              <h3 class="text-xl font-semibold text-slate-900 mb-4">Commercial Specialists</h3>
              <ul class="space-y-2 text-sm text-slate-600">
                <li>• Pepper Commercial</li>
                <li>• Easypay</li>
                <li>• Moneytech</li>
                <li>• Prime Capital</li>
                <li>• Prospa Business Loans</li>
                <li class="pt-2 text-xs text-slate-500">
                  + many more
                </li>
              </ul>
            </div>
          </div>

          <!-- What This Means For You Box -->
          <div class="bg-gray-50 border border-gray-200 rounded-xl p-6">
            <div class="flex items-center gap-3 text-2xl font-bold text-[#1C2C3B] mb-4">
              <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"></path>
              </svg>
              WHAT THIS MEANS FOR YOU
            </div>
            <div class="space-y-3 text-gray-700">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div class="text-sm text-gray-700 leading-relaxed">
                  <strong class="text-[#1C2C3B]">Access to competitive rates across all markets</strong> - we compare options you can't access directly
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div class="text-sm text-gray-700 leading-relaxed">
                  <strong class="text-[#1C2C3B]">Products not available direct to consumers</strong> - specialist business lenders with unique solutions
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div class="text-sm text-gray-700 leading-relaxed">
                  <strong class="text-[#1C2C3B]">Expert matching of your needs to suitable lenders</strong> - 20+ years experience in credit assessment
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <div class="text-sm text-gray-700 leading-relaxed">
                  <strong class="text-[#1C2C3B]">Ongoing relationship management and support</strong> - we maintain relationships so you don't have to
                </div>
              </div>
            </div>
            <div class="mt-6">
              <p class="font-medium text-[#1C2C3B] text-sm leading-relaxed">
                <strong>The Broker Advantage:</strong> While banks can only offer their own products, we can shop the entire market to find the right fit for your unique situation. This often means better rates, terms, and approval chances than going direct.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Fees and Commissions -->
    <section id="fees-commissions" class="py-12 md:py-16">
      <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
        <div class="mx-auto max-w-4xl">
          <h2 class="text-4xl font-bold tracking-tight text-slate-900 mb-6">
            Fees and Commissions - Complete Transparency
          </h2>

          <!-- Residential Lending Box -->
          <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm mb-4">
            <div class="flex items-center mb-3">
              <h3 class="text-xl font-medium text-[#1C2C3B]">RESIDENTIAL LENDING</h3>
            </div>
            
            <div class="text-center mb-3">
              <p class="text-xl font-semibold text-[#1C2C3B]">YOU PAY NOTHING FOR OUR SERVICE</p>
            </div>

            <div class="text-gray-700 space-y-1 mb-3">
              <div class="flex items-center">
                <svg class="h-4 w-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm">No upfront fees to you</span>
              </div>
              <div class="flex items-center">
                <svg class="h-4 w-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm">No ongoing service charges to you</span>
              </div>
              <div class="flex items-center">
                <svg class="h-4 w-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm">No hidden costs or surprises</span>
              </div>
              <div class="flex items-center">
                <svg class="h-4 w-4 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm">We're paid by lenders after successful settlement</span>
              </div>
            </div>

            <p class="text-gray-700 font-medium text-sm">
              <strong>Why this works:</strong> Lenders pay us because we bring them quality applications and save them marketing costs. You get expert service at no cost while gaining access to better rates and products.
            </p>
          </div>

          <!-- Commercial Lending Box -->
          <div class="bg-white border border-gray-200 rounded-xl p-4 shadow-sm mb-4">
            <div class="flex items-center mb-3">
              <h3 class="text-xl font-medium text-[#1C2C3B]">COMMERCIAL LENDING</h3>
            </div>
            
            <div class="text-center mb-3">
              <p class="text-sm font-medium text-[#1C2C3B]">Complex transactions may incur work fees disclosed upfront. Simple commercial loans typically have no fees to you.</p>
            </div>

            <div class="text-gray-700 space-y-2 mb-3">
              <div class="flex items-start">
                <svg class="h-4 w-4 text-green-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm"><strong>Simple business loans:</strong> Usually no fees to you (paid by lender like residential)</span>
              </div>
              <div class="flex items-start">
                <svg class="h-4 w-4 text-green-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm"><strong>Complex structuring work:</strong> May incur professional service fees disclosed before you proceed</span>
              </div>
              <div class="flex items-start">
                <svg class="h-4 w-4 text-green-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm"><strong>Business acquisitions, sophisticated structures:</strong> Work fees may apply due to extensive preparation required</span>
              </div>
              <div class="flex items-start">
                <svg class="h-4 w-4 text-green-500 mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-sm"><strong>All fees always disclosed upfront</strong> - no surprises, ever</span>
              </div>
