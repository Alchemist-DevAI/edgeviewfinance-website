---
import { getCollection } from "astro:content";
import { slug } from "github-slugger";
import Layout from "../../layout/Layout.astro";
import BlogAside from "../../components/Blog/BlogAside.astro";
import BreadCumb from "../../components/ui/BreadCumb.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  const Blogs = await getCollection("blogs");
  return Blogs.map((blog: any) => {
    return {
      params: { single: slug(blog?.data?.title) },
      props: { blog },
    };
  });
}
const { blog } = Astro.props;
const { data } = blog;
const { title, date, author, category, image } = data;
const { Content } = await blog.render();
---

<Layout title={title}>
  <main class='main-wrapper relative overflow-hidden'>
    <!-- Breadcrumb Section -->
    <BreadCumb>
      <h1 class='breadcrumb-title font-InstrumentSans text-2xl font-bold text-[#1C2C3B]'>Blog Article</h1>
      <ul class='breadcrumb-nav font-InstrumentSans'>
        <li><a href='/' class='text-gray-600 hover:text-[#f97316] transition-colors'>Home</a></li>
        <li><a href='/blog/1' class='text-gray-600 hover:text-[#f97316] transition-colors'>Blog</a></li>
        <li class='text-[#1C2C3B] font-semibold'>{title}</li>
      </ul>
    </BreadCumb>

    <!-- Main Blog Section -->
    <div class='blog-section bg-white mt-20 lg:mt-24'>
      <div class='py-12 lg:py-16 xl:py-20'>
        <div class='container-default'>
          <div class='grid grid-cols-1 gap-x-8 gap-y-12 lg:grid-cols-[1fr,minmax(416px,_0.4fr)]'>
            
            <!-- Main Article Content -->
            <div class='flex flex-col gap-y-8'>
              <article class='bg-white shadow-lg overflow-hidden'>
                
                <!-- Featured Image -->
                <div class='mb-8 block overflow-hidden'>
                  <Image
                    src={image}
                    alt={title}
                    width='856'
                    height='540'
                    class='h-auto w-full object-cover hover:scale-105 transition-transform duration-300'
                  />
                </div>

                <!-- Article Content -->
                <div class='px-6 sm:px-8 pb-8'>
                  
                  <!-- Article Meta -->
                  <div class='mb-8 flex flex-wrap items-center gap-4 text-sm sm:gap-6'>
                    <div class='flex items-center gap-3'>
                      <Image
                        src={author.img}
                        alt={author.name}
                        width='40'
                        height='40'
                        class='object-cover'
                      />
                      <span class='font-InstrumentSans font-semibold text-[#1C2C3B]'>
                        By {author.name}
                      </span>
                    </div>
                    
                    <div class='flex items-center gap-2 text-gray-600'>
                      <svg class='w-4 h-4' fill='none' stroke='currentColor' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'>
                        <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'></path>
                      </svg>
                      <span class='font-InstrumentSans'>{date}</span>
                    </div>
                    
                    <div class='inline-block'>
                      <span class='bg-[#f97316] text-white px-4 py-1.5 text-sm font-InstrumentSans font-semibold'>
                        {category}
                      </span>
                    </div>
                  </div>

                  <!-- Article Title -->
                  <h1 class='mb-8 font-InstrumentSans text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight text-[#1C2C3B]'>
                    {title}
                  </h1>

                  <!-- Article Body Content -->
                  <div class='prose prose-lg max-w-none font-InstrumentSans text-gray-700 leading-relaxed'>
                    <Content />
                  </div>

                  <!-- Social Share Section -->
                  <div class='mt-12 pt-8 border-t border-gray-200'>
                    <div class='flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4'>
                      <span class='font-InstrumentSans font-semibold text-[#1C2C3B] text-lg'>
                        Share this article:
                      </span>
                      <div class='flex gap-3'>
                        <button class='bg-[#f97316] text-white p-3 hover:bg-[#ea580c] hover:shadow-lg transition-all duration-300 w-12 h-12 flex items-center justify-center'>
                          <svg class='w-5 h-5' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'>
                            <path stroke-linecap='round' stroke-linejoin='round' d='M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z'/>
                          </svg>
                        </button>
                        <button class='bg-[#f97316] text-white p-3 hover:bg-[#ea580c] hover:shadow-lg transition-all duration-300 w-12 h-12 flex items-center justify-center'>
                          <svg class='w-5 h-5' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'>
                            <path stroke-linecap='round' stroke-linejoin='round' d='M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z'/>
                          </svg>
                        </button>
                        <button class='bg-[#f97316] text-white p-3 hover:bg-[#ea580c] hover:shadow-lg transition-all duration-300 w-12 h-12 flex items-center justify-center'>
                          <svg class='w-5 h-5' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'>
                            <path stroke-linecap='round' stroke-linejoin='round' d='M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z'/>
                            <circle cx='4' cy='4' r='2' stroke-linecap='round' stroke-linejoin='round'/>
                          </svg>
                        </button>
                        <button class='bg-[#f97316] text-white p-3 hover:bg-[#ea580c] hover:shadow-lg transition-all duration-300 w-12 h-12 flex items-center justify-center'>
                          <svg class='w-5 h-5' fill='none' stroke='currentColor' stroke-width='2' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg'>
                            <path stroke-linecap='round' stroke-linejoin='round' d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'/>
                          </svg>
                        </button>
                      </div>
                    </div>
                  </div>

                  <!-- Author Bio Section -->
                  <div class='mt-12 p-6 bg-gray-50'>
                    <div class='flex flex-col sm:flex-row gap-6'>
                      <div class='shrink-0'>
                        <Image
                          src={author.img}
                          alt={author.name}
                          width='80'
                          height='80'
                          class='object-cover'
                        />
                      </div>
                      <div class='flex-1'>
                        <h3 class='font-InstrumentSans text-xl font-bold text-[#1C2C3B] mb-2'>
                          {author.name}
                        </h3>
                        <p class='font-InstrumentSans text-gray-600 leading-relaxed'>
                          {author.bio || `${author.name} is a financial expert with extensive experience in business finance and lending solutions. They regularly contribute insights on business growth strategies and financial planning.`}
                        </p>
                      </div>
                    </div>
                  </div>

                </div>
              </article>

              <!-- Call-to-Action Section -->
              <div class='bg-[#1C2C3B] p-8 text-center'>
                <h3 class='font-InstrumentSans text-2xl font-bold text-white mb-4'>
                  Ready to Transform Your Business Finance?
                </h3>
                <p class='font-InstrumentSans text-gray-200 mb-6 max-w-2xl mx-auto'>
                  Get expert guidance on your business finance needs. Take our Finance Readiness Assessment and discover opportunities for growth.
                </p>
                <a
                  href='/finance-ready-assessment'
                  class='inline-block bg-[#f97316] text-white px-8 py-4 font-InstrumentSans font-bold hover:bg-[#ea580c] hover:shadow-lg transition-all duration-300'
                >
                  CHECK MY READINESS SCORE
                </a>
              </div>

            </div>

            <!-- Sidebar -->
            <BlogAside />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
