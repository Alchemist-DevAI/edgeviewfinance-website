  </section>

  <!-- Understanding Business Acquisition Finance Section -->
  <section id="learn-more" class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-bold mb-6 font-['Instrument_Sans'] text-[#1C2C3B]">
