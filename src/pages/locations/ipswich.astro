  <!-- Section 2: Economic Context -->
  <section class="py-16 md:py-20 bg-white">
    <div class="container-default">
      <h2 class="text-3xl md:text-4xl font-bold text-[#1C2C3B] mb-6 text-center">
        Financing Ipswich's Record Economic Growth
