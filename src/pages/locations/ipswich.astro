---

<Layout
  title={pageTitle}
  description={pageDescription}
  canonical={pageUrl}
  ogType="website"
>
  <!-- Schema.org Markup -->
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "FinancialService",
    "name": "Edgeview Finance - Ipswich",
    "description": "Business loans and equipment finance for Ipswich Queensland",
    "areaServed": {
      "@type": "City",
      "name": "Ipswich",
      "containedIn": {
        "@type": "State",
        "name": "Queensland"
      }
