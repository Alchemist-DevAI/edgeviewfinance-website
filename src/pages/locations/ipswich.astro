---
import Layout from "../../layout/Layout.astro";
import StatBox from "../../components/location-pages/StatBox.astro";
import HighlightBox from "../../components/location-pages/HighlightBox.astro";
import StatCard from "../../components/location-pages/StatCard.astro";
import ServiceCard from "../../components/location-pages/ServiceCard.astro";

// SEO Meta Data
const pageTitle = "Business Loans Ipswich | Equipment Finance | Edgeview";
const pageDescription = "Expert business loans in Ipswich. Equipment finance for manufacturing, construction & logistics. Fast approvals for Queensland's fastest-growing economy.";
const pageUrl = "https://www.edgeviewfinance.com.au/locations/ipswich";

// Breadcrumb configuration
const breadcrumbs = [
  { label: "Home", href: "/" },
  { label: "Ipswich", href: "/locations/ipswich" }
