<Layout title={meta.title}>
  <!-- Section 1: Hero -->
  <section class="hero-section">
    <div class="container-default">
      <nav class="breadcrumb" aria-label="Breadcrumb">
        <ol class="breadcrumb-list">
          <li><a href="/">Home</a></li>
