---
import Layout from '../layout/Layout.astro';
import ContentArea2 from '../components/Index/ContentArea2.astro';
import ServiceGrid from '../components/Index/ServiceGrid.astro';
import ProcessSection from '../components/Index/ProcessSection.astro';
import TestimonialSection from '../components/Index/TestimonialSection.astro';
import NewsLetter from '../components/Index/NewsLetter.astro';

const meta = {
  title: "Vehicle Finance Queensland | Commercial Vehicle Loans | Edgeview Finance",
  description: "Expert vehicle finance for Queensland trade businesses. Cars, trucks, utes, trailers and fleet vehicles. 24-48 hour approvals. Competitive rates and flexible terms.",
  keywords: "vehicle finance Queensland, commercial vehicle loans, truck finance, ute finance, fleet finance, car loans business, trailer finance"
};

// Custom hero data for Vehicle Finance page
const heroData = {
  header: "Need Vehicle Finance?\nHere's What You Need to Know",
  subheading: "Professional vehicle finance guidance for trade businesses",
  bodyText: "Get the vehicles your business needs with finance that works. From single vehicles to fleet financing, access competitive rates and quick approvals with 24-48 hour* turnaround.",
  trustIndicator: "Fast approvals for vehicle finance",
  buttonPrimary: {
    text: "Book Discovery Call",
    link: "#book-call"
  },
  heroImage: "/assets/images/hero-tradie-optimized.webp"
};
---

<Layout title={meta.title}>
  <!-- Hero Section using Homepage styling -->
  <section class='section-hero'>
    <div class='relative z-10 overflow-hidden'>
      <div class='pt-24 sm:pt-28 lg:pt-32 pb-8 lg:pb-12'>
        <div class='container-default relative z-10'>
          <!-- Single Column Layout for Service Pages -->
          <div class='max-w-4xl mx-auto text-center'>
            <h1 class='mb-6 font-InstrumentSans text-3xl sm:text-4xl lg:text-[48px] font-bold text-ColorBlack'>
              <span class='block mb-2'>{heroData.header.split('\n')[0]}</span>
              <span class='block'>{heroData.header.split('\n')[1]}</span>
            </h1>
            
            <h2 class='mb-6 text-xl lg:text-2xl font-semibold text-gray-700 font-InstrumentSans'>
              {heroData.subheading}
            </h2>
            
            <p class='mb-6 text-lg text-gray-600 font-InstrumentSans leading-relaxed max-w-3xl mx-auto'>
              {heroData.bodyText}
            </p>
            
            <div class='mb-8'>
              <div class='inline-flex items-center gap-2 bg-[#f97316] bg-opacity-10 px-4 py-2'>
                <svg class='w-5 h-5 text-[#f97316]' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                </svg>
