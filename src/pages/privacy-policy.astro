    <script>
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Toggle expand functionality - make it globally available
        window.toggleExpand = function(expandId) {
            const expandContent = document.getElementById(expandId);
            const iconId = expandId.split('-')[0] + '-icon';
            const icon = document.getElementById(iconId);
            
            if (expandContent && icon) {
                if (expandContent.classList.contains('hidden')) {
                    expandContent.classList.remove('hidden');
                    expandContent.style.animation = 'slideDown 0.3s ease-out';
                    icon.style.transform = 'rotate(180deg)';
                } else {
                    expandContent.classList.add('hidden');
                    icon.style.transform = 'rotate(0deg)';
                }
            }
        }
    </script>
