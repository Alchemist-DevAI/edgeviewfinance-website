---
// TrustBadge.astro - Trust Indicator Badge Component
// Purpose: Display certifications and trust indicators
interface Props {
  type: 'australian-data' | 'microsoft-security' | 'app-compliance' | 'zero-trust';
  size?: 'sm' | 'md' | 'lg';
}

const { type, size = 'md' } = Astro.props;

const badges = {
  'australian-data': {
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>',
    title: 'Australian Data Residency',
    subtitle: 'Your data stays in Australia'
  },
  'microsoft-security': {
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>',
    title: 'Microsoft 365 Security',
    subtitle: 'Enterprise-grade protection'
  },
  'app-compliance': {
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v6a2 2 0 002 2h2m0-8h2m-2 0V3a2 2 0 012-2h2a2 2 0 012 2v2m0 0h2a2 2 0 012 2v6a2 2 0 01-2 2h-2m0 0v2a2 2 0 01-2 2H9a2 2 0 01-2-2v-2m0 0H5"></path></svg>',
    title: 'APP Compliant',
    subtitle: 'Australian Privacy Principles'
  },
  'zero-trust': {
    icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>',
    title: 'Zero-Trust Architecture',
    subtitle: 'Verify everything, trust nothing'
  }
};

const badge = badges[type];
const sizeClasses = {
  sm: 'p-3 text-sm',
  md: 'p-4 text-base',
  lg: 'p-6 text-lg'
};
---

<div class={`trust-badge bg-white border-2 border-emerald-200 rounded-lg shadow-sm ${sizeClasses[size]} flex items-center gap-3`}>
  <div class="badge-icon text-emerald-600">
    <Fragment set:html={badge.icon} />
  </div>
  
  <div class="badge-content">
    <div class="badge-title font-bold text-[#1C2C3B] leading-tight">
      {badge.title}
    </div>
    <div class="badge-subtitle text-gray-600 text-sm leading-tight">
      {badge.subtitle}
    </div>
  </div>
</div>

<style>
  .trust-badge:hover {
    @apply border-emerald-300 shadow-md transform scale-105;
    transition: all 0.2s ease-in-out;
  }
</style>