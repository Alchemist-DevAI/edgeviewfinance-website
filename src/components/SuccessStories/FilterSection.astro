---
// Filter categories based on success stories
const categories = [
  { id: "all", label: "All Stories", count: 12 },
  { id: "equipment", label: "Equipment Finance", count: 5 },
  { id: "property", label: "Property Finance", count: 3 },
  { id: "working-capital", label: "Working Capital", count: 2 },
  { id: "acquisition", label: "Business Acquisition", count: 2 }
];
---

<section class="filter-section">
  <div class="container-default">
    <div class="filter-container">
      <div class="filter-buttons flex flex-wrap justify-center gap-4">
        {categories.map((category) => (
          <button 
            data-category={category.id}
            class={`filter-btn ${category.id === 'all' ? 'active' : ''} px-6 py-3 border-2 border-gray-300 text-gray-700 font-medium font-InstrumentSans transition-all duration-300 hover:border-[#f97316] hover:text-[#f97316] focus:outline-none focus:ring-3 focus:ring-[#f97316]`}
          >
            {category.label}
            <span class="count ml-2 text-sm text-gray-500">({category.count})</span>
          </button>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
.filter-section {
  padding: 4rem 1rem;
  background: #F9FAFB;
}

.container-default {
  max-width: 1200px;
  margin: 0 auto;
}

.filter-btn.active {
  background: #f97316;
  border-color: #f97316;
  color: white;
}

.filter-btn.active .count {
  color: rgba(255, 255, 255, 0.9);
}

/* Ensure no border radius (sharp corners) */
* {
  border-radius: 0 !important;
}

@media (max-width: 768px) {
  .filter-section {
    padding: 3rem 1rem;
  }
  
  .filter-buttons {
    justify-content: flex-start;
    overflow-x: auto;
    flex-wrap: nowrap;
    gap: 0.75rem;
  }
  
  .filter-btn {
    white-space: nowrap;
    flex-shrink: 0;
  }
}
</style>

<script>
  // Add filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.filter-btn');
    
    buttons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        buttons.forEach(btn => btn.classList.remove('active'));
        // Add active class to clicked button
        button.classList.add('active');
        
        // Filter logic would go here
        const category = button.getAttribute('data-category');
        console.log('Filter by:', category);
      });
    });
  });
</script>