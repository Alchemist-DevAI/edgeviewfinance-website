          <div class="card-header bg-[#1C2C3B] text-white p-6">
            <div class="flex items-start justify-between mb-4">
              <span class="story-icon text-3xl">{story.icon}</span>
              <span class="amount-badge bg-[#f97316] text-white px-3 py-1 text-sm font-bold font-InstrumentSans">
                {story.amount}
              </span>
            </div>
            <h3 class="story-title text-xl font-bold mb-2 font-InstrumentSans">
              {story.title}
            </h3>
            <p class="story-subtitle text-sm text-gray-300 font-InstrumentSans">
              {story.subtitle}
            </p>
          </div>
          
          <!-- Card Body -->
          <div class="card-body p-6">
            <!-- Purpose -->
            <div class="purpose mb-4">
              <h4 class="text-sm font-semibold text-[#f97316] mb-1 font-InstrumentSans">PURPOSE</h4>
              <p class="text-sm text-gray-700 font-InstrumentSans">{story.purpose}</p>
            </div>
            
            <!-- Challenge -->
            <div class="challenge mb-4">
              <h4 class="text-sm font-semibold text-[#f97316] mb-1 font-InstrumentSans">CHALLENGE</h4>
              <p class="text-sm text-gray-600 font-InstrumentSans">{story.challenge}</p>
            </div>
            
            <!-- Solution -->
            <div class="solution mb-4">
              <h4 class="text-sm font-semibold text-[#f97316] mb-1 font-InstrumentSans">SOLUTION</h4>
              <p class="text-sm text-gray-600 font-InstrumentSans">{story.solution}</p>
            </div>
            
            <!-- Outcome -->
            <div class="outcome mb-6">
              <h4 class="text-sm font-semibold text-[#f97316] mb-1 font-InstrumentSans">OUTCOME</h4>
              <p class="text-sm text-gray-700 font-semibold font-InstrumentSans">{story.outcome}</p>
            </div>
            
            <!-- Testimonial -->
            <div class="testimonial border-t border-gray-200 pt-4">
              <blockquote class="text-sm italic text-gray-600 mb-3 font-InstrumentSans">
                "{story.testimonial}"
              </blockquote>
              <div class="client-info">
                <p class="text-sm font-semibold text-[#1C2C3B] font-InstrumentSans">{story.clientName}</p>
                <p class="text-xs text-gray-500 font-InstrumentSans">{story.clientRole}</p>
              </div>
            </div>
          </div>
        </article>
      ))}
