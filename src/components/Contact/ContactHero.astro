---
import { Image } from "astro:assets";
---

<section class='section-hero bg-white'>
  <div class='relative z-10 overflow-hidden'>
    <div class='pt-[10px] sm:pt-[15px] lg:pt-[20px] pb-6 lg:pb-10'>
      <div class='container-default relative z-10'>
        <!-- Two Column Layout: 60% text left, 40% image right -->
        <div class='grid grid-cols-1 lg:grid-cols-5 gap-8 lg:gap-12 items-center'>
          <!-- Text Content - 60% width on desktop -->
          <div class='lg:col-span-3 text-center lg:text-left order-2 lg:order-1'>
            <h1 class='mb-4 font-InstrumentSans text-contact-hero font-bold leading-[1.2] text-[#1C2C3B] uppercase'>
              READY TO SECURE YOUR<br>BUSINESS FINANCE TODAY?
            </h1>
            
            <h2 class='mb-4 text-lg lg:text-xl font-semibold text-[#1C2C3B] font-InstrumentSans'>
              Speak Directly to Queensland's Leading Finance Specialist - No Call Centres, No Delays
            </h2>
            
            <p class='mb-4 text-base lg:text-lg text-gray-600 font-InstrumentSans leading-relaxed'>
              Get answers to your business finance questions in minutes, not days. Dan Peters has over 20 years of experience helping businesses secure the funding they need to grow and succeed.
            </p>
            
            <!-- Trust Indicators -->
            <div class='mb-6 flex flex-wrap gap-3 justify-center lg:justify-start'>
              <div class='flex items-center gap-2'>
                <svg class='w-5 h-5 text-[#22C55E]' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                </svg>
                <span class='text-sm font-semibold text-[#1C2C3B] font-InstrumentSans'>
                  20+ Years Experience
                </span>
              </div>
              <div class='flex items-center gap-2'>
                <svg class='w-5 h-5 text-[#22C55E]' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                </svg>
                <span class='text-sm font-semibold text-[#1C2C3B] font-InstrumentSans'>
                  100+ Businesses Successfully Funded
                </span>
              </div>
              <div class='flex items-center gap-2'>
                <svg class='w-5 h-5 text-[#22C55E]' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                </svg>
                <span class='text-sm font-semibold text-[#1C2C3B] font-InstrumentSans'>
                  Same-Day Response Guarantee
                </span>
              </div>
              <div class='flex items-center gap-2'>
                <svg class='w-5 h-5 text-[#22C55E]' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                  <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                </svg>
                <span class='text-sm font-semibold text-[#1C2C3B] font-InstrumentSans'>
                  No Obligation Initial Consultation
                </span>
              </div>
            </div>
            
            <!-- CTA Buttons -->
            <div class='flex flex-col sm:flex-row gap-4 justify-center lg:justify-start items-center'>
              <a
                href='#contact-form'
                class='bg-[#f97316] text-white px-6 py-3 font-bold text-base transition-all duration-300 hover:bg-[#ea580c] hover:shadow-lg font-InstrumentSans min-h-[44px] flex items-center justify-center'
              >
                Book Discovery Call
              </a>
              
              <a
                href='tel:1300280895'
                class='border-2 border-[#f97316] bg-white text-[#f97316] px-6 py-3 font-bold text-base transition-all duration-300 hover:bg-[#f97316] hover:text-white font-InstrumentSans min-h-[44px] flex items-center justify-center'
              >
                <span class='flex items-center'>
                  <svg class='mr-2 h-5 w-5' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                    <path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'/>
                  </svg>
                  Call 1300 280 895
                </span>
              </a>
            </div>
          </div>
          
          <!-- Hero Image - 40% width on desktop -->
          <div class='lg:col-span-2 order-1 lg:order-2'>
            <div class='relative'>
              <Image
                src='/assets/images/dan-peters-headshot.jpg'
                alt='Dan Peters - Queensland Commercial Finance Specialist'
                width='600'
                height='600'
                class='w-full h-auto object-cover shadow-2xl max-h-[500px] object-top border-4 border-white'
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>