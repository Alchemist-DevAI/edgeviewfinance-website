---

<section class='section-business-info bg-white py-12 lg:py-16'>
  <div class='container-default mx-auto max-w-7xl px-6'>
    <!-- Section Header -->
    <div class='text-center mb-10'>
      <h2 class='mb-4 font-InstrumentSans text-2xl lg:text-3xl font-bold text-[#1C2C3B]'>
        Visit or Call Us
      </h2>
      <p class='text-lg text-gray-600 font-InstrumentSans max-w-3xl mx-auto'>
        Queensland-based specialist with state-wide coverage
      </p>
    </div>
    
    <!-- Two Column Layout -->
    <div class='grid grid-cols-1 lg:grid-cols-2 gap-6 max-w-5xl mx-auto'>
      
      <!-- Contact Details Box -->
      <div class='bg-gray-50 p-6 h-full'>
        <h3 class='text-lg font-bold text-[#1C2C3B] mb-4 font-InstrumentSans'>
          Contact Details
        </h3>
        
        <div class='space-y-4'>
          <!-- Phone -->
          <div class='flex items-start gap-3'>
            <svg class='w-5 h-5 text-[#f97316] mt-1 flex-shrink-0' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z'/>
            </svg>
            <div>
              <strong class='text-[#1C2C3B] font-InstrumentSans'>Phone:</strong>
              <a href='tel:1300280895' class='text-[#f97316] hover:text-[#ea580c] transition-colors duration-300 font-InstrumentSans block'>
                1300 280 895
              </a>
              <span class='text-sm text-gray-600 font-InstrumentSans italic'>
                Click to call - available during business hours
              </span>
            </div>
          </div>
          
          <!-- Email -->
          <div class='flex items-start gap-3'>
            <svg class='w-5 h-5 text-[#f97316] mt-1 flex-shrink-0' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'/>
            </svg>
            <div>
              <strong class='text-[#1C2C3B] font-InstrumentSans'>Email:</strong>
              <a href='mailto:financeteam@edgeviewfinance.com.au' class='text-[#f97316] hover:text-[#ea580c] transition-colors duration-300 font-InstrumentSans block break-words'>
                financeteam@edgeviewfinance.com.au
              </a>
              <span class='text-sm text-gray-600 font-InstrumentSans italic'>
                For documents, follow-up questions, and appointments
              </span>
            </div>
          </div>
          
          <!-- Location -->
          <div class='flex items-start gap-3'>
            <svg class='w-5 h-5 text-[#f97316] mt-1 flex-shrink-0' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z'/>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M15 11a3 3 0 11-6 0 3 3 0 016 0z'/>
            </svg>
            <div>
              <strong class='text-[#1C2C3B] font-InstrumentSans'>Locations:</strong>
              <span class='text-gray-700 font-InstrumentSans block'>
                Gold Coast and Sunshine Coast
              </span>
            </div>
          </div>
          
          <!-- Postal -->
          <div class='flex items-start gap-3'>
            <svg class='w-5 h-5 text-[#f97316] mt-1 flex-shrink-0' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
              <path stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'/>
            </svg>
            <div>
              <strong class='text-[#1C2C3B] font-InstrumentSans'>Postal:</strong>
              <span class='text-gray-700 font-InstrumentSans block'>
                PO BOX 9122, GCMC QLD 9726
              </span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Business Hours Box -->
      <div class='bg-gray-50 p-6 h-full'>
        <h3 class='text-lg font-bold text-[#1C2C3B] mb-4 font-InstrumentSans'>
          Business Hours
        </h3>
        
        <div class='space-y-4'>
          <div class='flex justify-between items-center'>
            <span class='font-semibold text-[#1C2C3B] font-InstrumentSans'>Monday - Friday:</span>
            <span class='text-gray-700 font-InstrumentSans'>8:30am - 5:30pm</span>
          </div>
          
          <div class='flex justify-between items-center'>
            <span class='font-semibold text-[#1C2C3B] font-InstrumentSans'>Saturday:</span>
            <span class='text-gray-700 font-InstrumentSans'>By Appointment</span>
          </div>
          
          <div class='flex justify-between items-center'>
            <span class='font-semibold text-[#1C2C3B] font-InstrumentSans'>Sunday:</span>
            <span class='text-gray-700 font-InstrumentSans'>Closed</span>
          </div>
          
          <div class='mt-8 p-4 bg-white border-l-4 border-[#f97316]'>
            <div class='flex items-start gap-2'>
              <svg class='w-5 h-5 text-[#f97316] mt-0.5 flex-shrink-0' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                <path stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.996-.833-2.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z'/>
              </svg>
              <div>
                <p class='font-semibold text-[#1C2C3B] font-InstrumentSans'>After-hours enquiries:</p>
                <p class='text-sm text-gray-600 font-InstrumentSans'>
                  Leave a detailed message and we'll contact you first thing the next business day. For urgent matters, clearly indicate the urgency in your message.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>
</section>