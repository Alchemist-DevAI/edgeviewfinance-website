---
import { Image } from "astro:assets";
import { getEntryBySlug } from "astro:content";
import { getCollection } from "astro:content";
import { slug } from "github-slugger";
const blogHeader = await getEntryBySlug("IndexPage", "blogs");
const blogs = await getCollection("blogs");
const { header, description } = blogHeader?.data;
---

<section class="section-blog bg-gray-50 py-12">
  <div class="container-default mx-auto max-w-7xl px-6">
    
    <!-- Section Header -->
    <div class="text-center mb-10">
      <h2 class="text-4xl lg:text-5xl font-semibold text-[#1C2C3B] mb-4 font-['Instrument_Sans']">
        {header}
      </h2>
      <p class="text-xl text-[#4B5563] font-['Instrument_Sans'] max-w-3xl mx-auto">
        {description}
      </p>
    </div>

    <!-- Blog Grid -->
    <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        blogs?.slice(0, 6).map(
          ({ data: { title, category, image, author, date } }: any) => (
            <article class="group h-full">
              <div class="bg-white border-l-4 border-l-[#f97316] p-6 shadow-sm hover:shadow-lg transition-all duration-300 h-full flex flex-col">
                <div class="relative overflow-hidden mb-6">
                  <a href={`/blog/${slug(title)}`} class="block">
                    <Image
                      src={image}
                      alt={title}
                      width="376"
                      height="280"
                      loading="lazy"
                      class="h-48 w-full object-cover transition-all duration-300 group-hover:scale-105"
                    />
                  </a>
                  <div class="absolute top-4 right-4 inline-block bg-[#f97316] px-3 py-1 text-sm font-semibold text-white font-['Instrument_Sans']">
                    {category}
                  </div>
                </div>
                
                <div class="flex-grow flex flex-col">
                  <div class="mb-4 flex flex-wrap gap-4 text-sm text-[#6B7280] font-['Instrument_Sans']">
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                      </svg>
                      {author?.name}
                    </div>
                    <div class="flex items-center gap-2">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                      </svg>
                      {date}
                    </div>
                  </div>
                  
                  <h3 class="mb-4 flex-grow">
                    <a
                      href={`/blog/${slug(title)}`}
                      class="text-xl font-semibold text-[#1C2C3B] hover:text-[#f97316] transition-colors duration-300 font-['Instrument_Sans'] line-clamp-2">
                      {title}
                    </a>
                  </h3>

                  <a
                    href={`/blog/${slug(title)}`}
                    class="inline-flex items-center gap-2 text-[#f97316] hover:text-[#ea580c] font-semibold transition-colors duration-300 font-['Instrument_Sans'] mt-auto">
                    Read More
                    <svg class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          )
        )
      }
    </div>

    <!-- View All Button -->
    <div class="text-center mt-8">
      <a
        href="/blog"
        class="btn-primary inline-flex items-center justify-center bg-[#f97316] hover:bg-[#ea580c] text-white px-8 py-4 font-semibold transition-all duration-300 font-['Instrument_Sans']">
        View All Articles
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>

  </div>
</section>

<style>
  .btn-primary {
    border-radius: 0;
    border: 2px solid #f97316;
    transition: all 0.3s ease;
  }
  
  .btn-primary:hover {
    box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
