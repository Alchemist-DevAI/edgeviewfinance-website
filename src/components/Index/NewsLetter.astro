---
import { getEntryBySlug } from "astro:content";
const CtaData = await getEntryBySlug("IndexPage", "cta");
const { title, description, buttonPrimary, buttonSecondary } = CtaData?.data;
---

<section class='section-cta bg-gray-50 py-12'>
  <div class='container-default mx-auto max-w-7xl px-6'>
    <!-- Professional CTA Section -->
    <div class='bg-white shadow-xl overflow-hidden'>
      <div class='grid lg:grid-cols-2'>
        <!-- Content Side -->
        <div class='bg-[#1C2C3B] p-8 lg:p-12 flex items-center'>
          <div class='w-full'>
            <div class='inline-flex items-center bg-[#f97316] text-white px-4 py-2 mb-6'>
              <svg class='mr-2 h-5 w-5' fill='currentColor' viewBox='0 0 20 20'>
                <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z' clip-rule='evenodd'/>
              </svg>
              <span class='font-semibold uppercase tracking-wide font-InstrumentSans'>Final Step</span>
            </div>
            
            <h2 class='mb-6 font-InstrumentSans text-5xl lg:text-6xl xl:text-7xl font-bold text-white uppercase tracking-tight leading-none'>
              <span class='text-white'>{title || "YOUR NEXT STEP IS SIMPLE"}</span>
            </h2>
            
            <p class='mb-6 text-xl text-gray-300 font-InstrumentSans'>
              {description || "Stop letting finance hold your business back. Join 100's of businesses who've found a better way."}
            </p>
            
            <!-- Trust Points -->
            <div class='space-y-3 mb-8'>
              <div class='flex items-center text-gray-300'>
                <svg class='mr-3 h-5 w-5 text-green-500 flex-shrink-0' fill='currentColor' viewBox='0 0 20 20'>
                  <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z' clip-rule='evenodd'/>
                </svg>
                <span class='font-InstrumentSans'>No obligation strategic review</span>
              </div>
              <div class='flex items-center text-gray-300'>
                <svg class='mr-3 h-5 w-5 text-green-500 flex-shrink-0' fill='currentColor' viewBox='0 0 20 20'>
                  <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z' clip-rule='evenodd'/>
                </svg>
                <span class='font-InstrumentSans'>Know your options in 24 hours</span>
              </div>
              <div class='flex items-center text-gray-300'>
                <svg class='mr-3 h-5 w-5 text-green-500 flex-shrink-0' fill='currentColor' viewBox='0 0 20 20'>
                  <path fill-rule='evenodd' d='M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z' clip-rule='evenodd'/>
                </svg>
                <span class='font-InstrumentSans'>Speak directly with Dan Peters</span>
              </div>
            </div>
          </div>
        </div>
        
        <!-- CTA Side -->
        <div class='bg-gradient-to-br from-gray-50 to-white p-8 lg:p-12 flex items-center'>
          <div class='w-full text-center'>
            <div class='mb-6'>
              <div class='text-6xl font-bold text-[#f97316] mb-2 font-InstrumentSans'>2 MIN</div>
              <p class='text-gray-600 font-InstrumentSans'>to change your business trajectory</p>
            </div>
            
            <!-- CTA Buttons -->
            <div class='space-y-4'>
              <button
                onclick="Calendly.initPopupWidget({url: 'https://calendly.com/dan-peters-edgeviewfinance/finance-discovery-call'});return false;"
                class='block w-full bg-[#f97316] text-white px-8 py-5 font-bold text-lg transition-all duration-300 hover:bg-[#ea580c] hover:shadow-lg font-InstrumentSans cursor-pointer'
              >
                {buttonPrimary?.text || "BOOK YOUR DISCOVERY CALL NOW"}
              </button>
              
              <div class='flex items-center justify-center'>
                <div class='h-px bg-gray-300 flex-1'></div>
                <span class='px-4 text-gray-500 font-InstrumentSans'>or</span>
                <div class='h-px bg-gray-300 flex-1'></div>
              </div>
              
              <a
                href={buttonSecondary?.link || '/contact'}
                class='block w-full border-2 border-[#1C2C3B] bg-white text-[#1C2C3B] px-8 py-5 font-bold text-lg transition-all duration-300 hover:bg-[#1C2C3B] hover:text-white font-InstrumentSans'
              >
                {buttonSecondary?.text || "Click Here To Get In Contact Now"}
              </a>
              
              <p class='text-sm text-gray-500 mt-4 font-InstrumentSans'>
                Australian Credit Licence 459287
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>