---
// Process Section Component - EVFBS Homepage
// Professional card-based design matching Problem Amplification section style

// Accept props for dynamic disclaimer text
export interface Props {
  disclaimerText?: string;
  disclaimerSubtext?: string;
}

const { 
  disclaimerText = "No obligation, no paperwork, no junior staff",
  disclaimerSubtext = "*Approval times vary based on complexity and finance type"
} = Astro.props;
---

<section id="process" class="section-process relative overflow-hidden bg-gray-50 py-12 lg:py-16">
  <!-- Subtle gradient overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 via-gray-100 to-gray-50"></div>
  
  <!-- Subtle accent pattern -->
  <div class="absolute inset-0 opacity-[0.02]">
    <div class="absolute top-0 left-0 w-full h-full bg-[url(\"data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23FF9E10' fill-opacity='0.4'%3E%3Ccircle cx='30' cy='30' r='1.5'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E\")]"></div>
  </div>
  
  <div class="container-default relative z-10 mx-auto max-w-7xl px-6">
    
    <!-- Professional Header Section -->
    <div class="text-center mb-10">
      <div class="inline-flex items-center bg-orange-50 text-orange-700 px-6 py-3  font-semibold text-sm uppercase tracking-wide mb-6 border border-orange-200">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
        Simple Process
      </div>
      
      <h2 class="font-['Instrument_Sans'] text-3xl lg:text-4xl xl:text-5xl font-bold text-gray-900 mb-6 leading-tight">
        FROM FRUSTRATED TO FUNDED IN 3 SIMPLE STEPS
      </h2>
      
      <div class="bg-white p-6 max-w-3xl mx-auto shadow-lg border-b border-gray-200">
        <p class="text-lg text-gray-700 font-medium leading-relaxed">
          The Difference? We've done this 100's of times for all types of scenarios. We know what works.
        </p>
      </div>
    </div>

    <!-- Professional Process Steps with Card Design -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 relative">
      
      <!-- Progress Line (Desktop Only) -->
      <div class="hidden lg:block absolute top-28 left-1/6 right-1/6 h-0.5 bg-gradient-to-r from-orange-500 via-orange-300 to-orange-500 z-0"></div>
      
      <!-- Step 1: Strategic Discovery -->
      <div class="relative z-10">
        <div class="group bg-white p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200 hover:border-gray-300 h-full">
          
          <!-- Step Number Badge -->
          <div class="absolute -top-4 left-6">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-orange-500 text-white font-bold text-xl  shadow-lg group-hover:bg-orange-600 transition-colors font-['Instrument_Sans']">
              1
            </div>
          </div>
          
          <!-- Professional Icon -->
          <div class="w-12 h-12 bg-orange-100  flex items-center justify-center mb-4 mt-4 group-hover:bg-orange-200 transition-colors">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
          </div>
          
          <h3 class="font-['Instrument_Sans'] font-bold text-2xl text-gray-900 mb-3">
            STRATEGIC DISCOVERY
          </h3>
          
          <p class="text-gray-600 mb-3 leading-relaxed">
            <span class="font-semibold text-orange-600 text-lg">30 minutes</span>
          </p>
          
          <ul class="text-gray-600 space-y-2 mb-4">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Quick call with Dan (not junior staff)
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Tell us your situation - no paperwork needed
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              We'll know immediately if we can help
            </li>
          </ul>
          
        </div>
      </div>

      <!-- Step 2: Expert Matching -->
      <div class="relative z-10">
        <div class="group bg-white p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200 hover:border-gray-300 h-full">
          
          <!-- Step Number Badge -->
          <div class="absolute -top-4 left-6">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-orange-500 text-white font-bold text-xl  shadow-lg group-hover:bg-orange-600 transition-colors font-['Instrument_Sans']">
              2
            </div>
          </div>
          
          <!-- Professional Icon -->
          <div class="w-12 h-12 bg-orange-100  flex items-center justify-center mb-4 mt-4 group-hover:bg-orange-200 transition-colors">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          
          <h3 class="font-['Instrument_Sans'] font-bold text-2xl text-gray-900 mb-3">
            EXPERT MATCHING
          </h3>
          
          <p class="text-gray-600 mb-3 leading-relaxed">
            <span class="font-semibold text-orange-600 text-lg">Two Business Days*</span>
          </p>
          
          <ul class="text-gray-600 space-y-2 mb-4">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              We analyse your scenario against 40+ lenders
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Find lenders who understand YOUR business
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Multiple options, best terms negotiated
            </li>
          </ul>
          
        </div>
      </div>

      <!-- Step 3: Managed Approval -->
      <div class="relative z-10">
        <div class="group bg-white p-6 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-200 hover:border-gray-300 h-full">
          
          <!-- Step Number Badge -->
          <div class="absolute -top-4 left-6">
            <div class="inline-flex items-center justify-center w-12 h-12 bg-orange-500 text-white font-bold text-xl  shadow-lg group-hover:bg-orange-600 transition-colors font-['Instrument_Sans']">
              3
            </div>
          </div>
          
          <!-- Professional Icon -->
          <div class="w-12 h-12 bg-orange-100  flex items-center justify-center mb-4 mt-4 group-hover:bg-orange-200 transition-colors">
            <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          
          <h3 class="font-['Instrument_Sans'] font-bold text-2xl text-gray-900 mb-3">
            MANAGED APPROVAL
          </h3>
          
          <p class="text-gray-600 mb-3 leading-relaxed">
            <span class="font-semibold text-orange-600 text-lg">Professionally managed</span>
          </p>
          
          <ul class="text-gray-600 space-y-2 mb-4">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              We handle everything - you run your business
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Documents, negotiations, approval management
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-green-500 mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              Money ready when you need it
            </li>
          </ul>
          
        </div>
      </div>

    </div>

    <!-- Professional CTA Section -->
    <div class="text-center mt-12">
      <div class="mb-4">
        <p class="text-gray-700 text-lg font-medium mb-2">
          Ready to transform your business finance experience?
        </p>
        <p class="text-gray-600">
          Start with your complimentary Strategic Discovery call
        </p>
      </div>
      
      <a
        href="#contact"
        class="inline-flex items-center justify-center bg-gradient-to-r from-[#f97316] to-[#ea580c] text-white font-bold text-lg px-10 py-4  hover:from-[#ea580c] hover:to-[#dc2626] transition-all duration-300 shadow-lg hover:shadow-xl  font-['Instrument_Sans']"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
        </svg>
        Book Strategic Finance Discovery Call
      </a>
      
      <div class="bg-white p-4 mt-6 max-w-2xl mx-auto shadow-md border-b-2 border-orange-500">
        <p class="text-gray-600 text-sm mb-2">
          {disclaimerText}
        </p>
        <p class="text-gray-500 text-sm">
          {disclaimerSubtext}
        </p>
      </div>
    </div>

  </div>
</section>

<style>
  /* Custom styles for professional card-based process section */
  .section-process {
    position: relative;
  }
  
  /* Ensure proper card heights and transitions */
  .process-card {
    min-height: 400px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .process-card:hover {
    transform: translateY(-2px);
  }
  
  /* Progress line refinements for desktop */
  @media (min-width: 1024px) {
    .progress-line {
      background: linear-gradient(90deg, #FF9E10 0%, #FFA726 50%, #FF9E10 100%);
      box-shadow: 0 1px 3px rgba(255, 158, 16, 0.2);
    }
  }
  
  /* Step number badge animations */
  .step-badge {
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(255, 158, 16, 0.25);
  }
  
  .step-badge:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 16px rgba(255, 158, 16, 0.35);
  }
  
  /* Icon container animations */
  .icon-container {
    transition: all 0.3s ease;
  }
  
  /* CTA button enhancements */
  .cta-button {
    position: relative;
    overflow: hidden;
  }
  
  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }
  
  .cta-button:hover::before {
    left: 100%;
  }
</style>