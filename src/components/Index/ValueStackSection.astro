---
const { ValueStackData } = Astro.props;
const { title, valueStack, totalValue, investment, investmentSubtext, disclaimer } = ValueStackData?.data;
---

<section class="section-value-stack bg-gray-50 py-4 lg:py-6">
  <div class="container-default">
    <div class="text-center">
      <!-- VALUE STACK BOX - CRITICAL CONVERSION ELEMENT -->
      <div class="mx-auto max-w-[900px] bg-white border-4 border-[#f97316] shadow-xl overflow-hidden">
        <div class="bg-[#f97316] py-2 px-4">
          <h3 class="text-center text-xl lg:text-2xl font-bold font-InstrumentSans text-white tracking-wide leading-tight">
            {title || "WHAT YOU GET WHEN WORKING WITH EDGEVIEW FINANCE:"}
          </h3>
        </div>
        
        <div class="p-4 lg:p-5">
          <!-- Custom layout with specific ordering -->
          <div class="mb-4">
            <!-- Two-column grid for first 6 items -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-1 lg:gap-x-6 mb-2">
              <!-- Left Column -->
              <div class="space-y-1">
                <!-- 40+ Specialist Lender Network Access -->
                <div class="flex justify-between items-center py-1">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-[#1C2C3B] font-medium text-sm lg:text-base font-InstrumentSans">40+ Specialist Lender Network Access</span>
                  </div>
                  <span class="text-[#c2410c] font-bold text-sm lg:text-base font-InstrumentSans whitespace-nowrap ml-2">$2,500</span>
                </div>
                <!-- Professional Lender Negotiation Service -->
                <div class="flex justify-between items-center py-1">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-[#1C2C3B] font-medium text-sm lg:text-base font-InstrumentSans">Professional Lender Negotiation Service</span>
                  </div>
                  <span class="text-[#c2410c] font-bold text-sm lg:text-base font-InstrumentSans whitespace-nowrap ml-2">$3,500</span>
                </div>
                <!-- Personalised Business Finance Profile -->
                <div class="flex justify-between items-center py-1">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-[#1C2C3B] font-medium text-sm lg:text-base font-InstrumentSans">Personalised Business Finance Profile</span>
                  </div>
                  <span class="text-[#c2410c] font-bold text-sm lg:text-base font-InstrumentSans whitespace-nowrap ml-2">$5,000</span>
                </div>
              </div>
              
              <!-- Right Column -->
              <div class="space-y-1">
                <!-- MBA Financial Strategy Expertise -->
                <div class="flex justify-between items-center py-1">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-[#1C2C3B] font-medium text-sm lg:text-base font-InstrumentSans">MBA Financial Strategy Expertise</span>
                  </div>
                  <span class="text-[#c2410c] font-bold text-sm lg:text-base font-InstrumentSans whitespace-nowrap ml-2">$5,000</span>
                </div>
                <!-- Expert Application Preparation -->
                <div class="flex justify-between items-center py-1">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-[#1C2C3B] font-medium text-sm lg:text-base font-InstrumentSans">Expert Application Preparation</span>
                  </div>
                  <span class="text-[#c2410c] font-bold text-sm lg:text-base font-InstrumentSans whitespace-nowrap ml-2">$2,500</span>
                </div>
                <!-- Ongoing Strategic Partnership -->
                <div class="flex justify-between items-center py-1">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <span class="text-[#1C2C3B] font-medium text-sm lg:text-base font-InstrumentSans">Ongoing Strategic Partnership</span>
                  </div>
                  <span class="text-[#c2410c] font-bold text-sm lg:text-base font-InstrumentSans whitespace-nowrap ml-2">$10,000+</span>
                </div>
              </div>
            </div>
            
            <!-- Priceless item on its own line, right-aligned -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-1 lg:gap-x-6">
              <div class="hidden lg:block"></div> <!-- Empty left column -->
              <div class="flex justify-between items-center py-1">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-green-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-[#1C2C3B] font-medium text-sm lg:text-base font-InstrumentSans">20+ Years Banking & Finance Insider Knowledge</span>
                </div>
                <span class="text-[#c2410c] font-bold text-sm lg:text-base font-InstrumentSans whitespace-nowrap ml-2">Priceless</span>
              </div>
            </div>
          </div>
          
          <div class="bg-gray-100 -mx-4 lg:-mx-5 px-4 lg:px-5 py-2 mb-3">
            <div class="flex justify-between items-center">
              <span class="text-xl lg:text-2xl font-bold text-[#1C2C3B] font-InstrumentSans">TOTAL VALUE:</span>
              <span class="text-2xl lg:text-3xl font-bold text-[#c2410c] font-InstrumentSans">{totalValue || '$28,500+'}</span>
            </div>
          </div>
          
          <div class="text-center">
            <div class="flex justify-center items-center mb-1">
              <span class="text-xl lg:text-2xl font-bold text-[#1C2C3B] font-InstrumentSans mr-2">Your Investment:</span>
              <span class="text-2xl lg:text-3xl font-bold text-[#c2410c] font-InstrumentSans">{investment || '$0*'}</span>
            </div>
            <p class="text-base lg:text-lg font-semibold text-[#1C2C3B] mb-2 font-InstrumentSans">
              {investmentSubtext || 'We get paid by the lender when you get funded'}
            </p>
          </div>
        </div>
      </div>
      
      <!-- Disclaimer text outside the value stack box -->
      <div class="max-w-[900px] mx-auto text-center mt-4">
        <p class="text-xs text-gray-600 font-InstrumentSans px-4">
          {disclaimer || '*In many cases we get paid by the lender. For complex applications requiring financial modelling, we may charge a work fee upfront, quoted in your pricing proposal.'}
        </p>
        <p class="text-xs text-gray-600 font-InstrumentSans px-4 mt-1">
          Credit License 459287 | Terms & Conditions apply
        </p>
      </div>
    </div>
  </div>
</section>