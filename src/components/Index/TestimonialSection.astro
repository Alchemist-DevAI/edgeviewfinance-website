---
import { getEntry } from "astro:content";
const Testimonial = await getEntry({ collection: "IndexPage", id: "testimonial" });
import TestimonialSwiper from "../functional/TestimonialSwiper";
const { testimonials, Header, description, button } = Testimonial.data;
---

<section class="section-testimonial bg-white py-12">
  <div class="container-default mx-auto max-w-7xl px-6">
    
    <!-- Section Header -->
    <div class="text-center mb-10">
      <div class="inline-flex items-center px-4 py-2 bg-[#f97316] text-white mb-4">
        <span class="text-sm font-semibold uppercase tracking-wide font-['Instrument_Sans']">
          Client Reviews
        </span>
      </div>
      <h2 class="text-4xl lg:text-5xl font-semibold text-[#1C2C3B] mb-4 font-['Instrument_Sans']">
        {Header}
      </h2>
      <p class="text-xl text-[#4B5563] font-['Instrument_Sans'] max-w-3xl mx-auto mb-8">
        {description}
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:gap-10 items-start">
      <div class="testimonial-slider-area order-2 md:order-1">
        <TestimonialSwiper client:only='react' data={testimonials} />
      </div>
      <div class="order-1 md:order-2">
        <div class="bg-white p-6 border-l-4 border-l-[#f97316] shadow-lg w-full h-[400px] flex flex-col justify-between">
          <h3 class="text-2xl font-semibold text-[#1C2C3B] mb-4 font-['Instrument_Sans']">
            Why Our Clients Choose Us
          </h3>
          <ul class="space-y-4 mb-8">
            <li class="flex items-start">
              <svg class="w-6 h-6 text-[#22C55E] mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-[#4B5563] font-['Instrument_Sans']">Expert guidance through complex finance decisions</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-[#22C55E] mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-[#4B5563] font-['Instrument_Sans']">Access to 40+ specialist lenders</span>
            </li>
            <li class="flex items-start">
              <svg class="w-6 h-6 text-[#22C55E] mr-3 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-[#4B5563] font-['Instrument_Sans']">Dedicated support from application to settlement</span>
            </li>
          </ul>
          
          <div class="mt-auto pt-6">
            {button && (
              <a
                href={button.link}
                class="btn-primary inline-flex items-center justify-center bg-[#f97316] hover:bg-[#ea580c] text-white px-8 py-4 font-semibold transition-all duration-300 font-['Instrument_Sans'] w-full"
              >
                {button.text}
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<style>
  .btn-primary {
    border-radius: 0;
    border: 2px solid #f97316;
    transition: all 0.3s ease;
  }
  
  .btn-primary:hover {
    box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
  }
  
  /* Ensure consistent testimonial box heights */
  :global(.swiper) {
    padding-bottom: 50px !important;
  }
  
  :global(.swiper-pagination) {
    bottom: 0 !important;
    position: absolute !important;
  }
  
  :global(.swiper-pagination-bullet) {
    background: #d1d5db !important;
    opacity: 1 !important;
    width: 10px !important;
    height: 10px !important;
    margin: 0 5px !important;
  }
  
  :global(.swiper-pagination-bullet-active) {
    background: #f97316 !important;
  }
  
  :global(.swiper-slide) {
    height: auto !important;
  }
</style>
