---
// Credentials Section Component for About Page
// Based on Phase 4 design specifications

// Credential cards data from copy document
const credentialCards = [
  {
    title: "AUSTRALIAN\nCREDIT\nLICENSE\n459287",
    description: "Fully licensed and compliant with ASIC regulations",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.031 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  {
    title: "PROFESSIONAL\nMEMBERSHIPS",
    description: "Active member of industry associations and ongoing professional development",
    icon: "M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"
  },
  {
    title: "40+ ACTIVE\nLENDER\nPARTNERSHIPS", 
    description: "Direct relationships with major banks, credit unions, and specialist lenders",
    icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
  },
  {
    title: "QUEENSLAND\nLOCAL\nEXPERTISE",
    description: "Deep understanding of local market conditions and business environments",
    icon: "M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z"
  }
];

const lenderCategories = [
  "Major Banks",
  "Regional Banks", 
  "Credit Unions",
  "Non-Bank Lenders",
  "Specialist Equipment Financiers",
  "SMSF Lenders",
  "Alternative Funders"
];

const complianceItems = [
  "Australian Credit License (ACL) 459287",
  "ASIC registered credit provider",
  "Professional Indemnity Insurance current",
  "Privacy Act compliance and data protection",
  "Regular ASIC compliance training and audits",
  "Member of industry professional bodies"
];
---

<section class="credentials-section">
  <div class="container-default">
    <!-- Section Header -->
    <div class="section-header text-center mb-16">
      <h2 class="font-InstrumentSans text-4xl lg:text-5xl font-bold text-[#1C2C3B] mb-6">
        Credentials & Trust
      </h2>
      <div class="subheading text-xl lg:text-2xl font-medium text-[#f97316] mb-4">
        Professional Standards You Can Trust
      </div>
    </div>

    <!-- Credentials Cards Grid -->
    <div class="credentials-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      {credentialCards.map((credential) => (
        <div class="credential-card bg-white p-6 text-center border-3 border-gray-200 transition-all duration-300 hover:border-[#f97316] hover:transform hover:-translate-y-1 hover:shadow-xl relative overflow-hidden">
          <!-- Orange top border -->
          <div class="absolute top-0 left-0 right-0 h-1 bg-[#f97316]"></div>
          
          <!-- Credential Icon -->
          <div class="credential-icon text-5xl text-[#f97316] mb-6 flex justify-center">
            <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={credential.icon}></path>
            </svg>
          </div>
          
          <!-- Credential Title -->
          <h3 class="credential-title text-lg font-semibold text-[#1C2C3B] uppercase tracking-wide mb-4 leading-tight font-InstrumentSans">
            {credential.title.split('\n').map((line, index) => (
              <>
                {line}
                {index < credential.title.split('\n').length - 1 && <br />}
              </>
            ))}
          </h3>
          
          <!-- Credential Description -->
          <p class="credential-description text-sm text-gray-600 leading-relaxed font-InstrumentSans">
            {credential.description}
          </p>
        </div>
      ))}
    </div>

    <!-- Lender Network Section -->
    <div class="lender-network bg-white p-8 border-2 border-[#f97316] text-center mb-12">
      <h3 class="text-2xl font-semibold text-[#1C2C3B] mb-6 font-InstrumentSans">
        Our Trusted Lender Network Includes:
      </h3>
      
      <!-- Lender Categories -->
      <div class="lender-categories grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mb-6">
        {lenderCategories.map((category) => (
          <div class="lender-category p-3 bg-orange-50 text-sm font-medium text-[#1C2C3B] border-l-4 border-[#f97316] font-InstrumentSans">
            {category}
          </div>
        ))}
      </div>
      
      <!-- Lender Note -->
      <p class="lender-note text-sm text-gray-600 italic mt-6 font-InstrumentSans">
        We maintain direct relationships with over 40 approved lenders to ensure you get the most competitive rates and terms available.
      </p>
    </div>

    <!-- Compliance Information -->
    <div class="compliance-info bg-gray-100 p-6 border-l-4 border-[#f97316]">
      <h4 class="text-lg font-semibold text-[#1C2C3B] mb-6 font-InstrumentSans">
        Regulatory Compliance:
      </h4>
      
      <ul class="compliance-list grid grid-cols-1 md:grid-cols-2 gap-2 list-none p-0">
        {complianceItems.map((item) => (
          <li class="flex items-center gap-2 text-sm text-gray-600 font-InstrumentSans">
            <span class="text-[#f97316] font-bold">âœ“</span>
            {item}
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

<style>
.credentials-section {
  padding: 8rem 1rem;
  background: #F3F4F6;
}

.container-default {
  max-width: 1200px;
  margin: 0 auto;
}

@media (max-width: 768px) {
  .credentials-section {
    padding: 4rem 1rem;
  }
  
  .credentials-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }
  
  .lender-categories {
    grid-template-columns: 1fr;
  }
  
  .compliance-list {
    grid-template-columns: 1fr;
  }
  
  .section-header h2 {
    font-size: 1.875rem;
  }
  
  .subheading {
    font-size: 1.125rem;
  }
}

@media (max-width: 480px) {
  .credential-card {
    padding: 1.5rem 1rem;
  }
  
  .credential-title {
    font-size: 1rem;
  }
}

/* Focus states for accessibility */
.credential-card:focus-within {
  outline: 3px solid #f97316;
  outline-offset: 2px;
}

/* Ensure no border radius (sharp corners) */
* {
  border-radius: 0 !important;
}
</style>