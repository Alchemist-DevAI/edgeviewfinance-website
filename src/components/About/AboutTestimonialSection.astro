---
import { getEntryBySlug } from "astro:content";

const TestimonialData = await getEntryBySlug("aboutPage", "about-testimonials");
const { header, subheading, testimonials = [], results = { title: '', items: [] } } = TestimonialData?.data || {};

<section class="about-testimonial-section">
  <div class="container-default">
    <!-- Section Header -->
    <div class="section-header text-center mb-16">
      <h2 class="font-InstrumentSans text-4xl lg:text-5xl font-bold text-[#1C2C3B] mb-6">
        {header}
      </h2>
      <div class="subheading text-xl lg:text-2xl font-medium text-[#f97316] mb-4">
        {subheading}
      </div>
    </div>

    <!-- Content Grid -->
    <div class="content-grid grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
      <!-- Testimonials Column -->
      <div class="testimonials-column">
        <div class="space-y-8">
          {testimonials && testimonials.map((testimonial) => (
            <div class="testimonial-card bg-white p-8 border-2 border-gray-200 transition-all duration-300 hover:border-[#f97316] hover:shadow-lg">
              <!-- Rating Stars -->
              <div class="rating mb-4 flex items-center gap-1">
                {Array.from({ length: testimonial.rating }, (_, i) => (
                  <svg class="w-5 h-5 text-[#f97316]" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
              </div>
              
              <!-- Testimonial Text -->
              <blockquote class="testimonial-text text-lg text-gray-600 mb-6 leading-relaxed font-InstrumentSans">
                "{testimonial.text}"
              </blockquote>
              
              <!-- Client Info -->
              <div class="client-info border-t border-gray-200 pt-6">
                <div class="client-name text-xl font-semibold text-[#1C2C3B] mb-1 font-InstrumentSans">
                  {testimonial.name}
                </div>
                <div class="client-position text-sm text-[#f97316] uppercase tracking-wide font-semibold font-InstrumentSans">
                  {testimonial.position}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <!-- Results Column -->
      <div class="results-column">
        <div class="results-card bg-[#1C2C3B] p-8 lg:p-12 text-white h-full flex flex-col">
          <h3 class="text-2xl lg:text-3xl font-semibold mb-8 font-InstrumentSans text-center">
            {results.title}
          </h3>
          
          <ul class="results-list space-y-6 flex-1">
            {results.items && results.items.map((item) => (
              <li class="flex items-start gap-4">
                <div class="result-check text-[#f97316] text-2xl font-bold flex-shrink-0 mt-1">
                  {item.substring(0, 1)}
                </div>
                <span class="text-lg text-gray-300 leading-relaxed font-InstrumentSans">
                  {item.substring(1).trim()}
                </span>
              </li>
            ))}
          </ul>
          
          <!-- Trust Badge -->
          <div class="trust-badge text-center mt-8 pt-8 border-t border-gray-600">
            <div class="text-3xl font-bold text-[#f97316] mb-2 font-InstrumentSans">
              100+
            </div>
            <div class="text-sm text-gray-400 uppercase tracking-wide font-InstrumentSans">
              Queensland Trades Businesses Successfully Funded
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.about-testimonial-section {
  padding: 8rem 1rem;
  background: #FFFFFF;
}

.container-default {
  max-width: 1200px;
  margin: 0 auto;
}

@media (max-width: 768px) {
  .about-testimonial-section {
    padding: 4rem 1rem;
  }
  
  .content-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
  
  .section-header h2 {
    font-size: 1.875rem;
  }
  
  .subheading {
    font-size: 1.125rem;
  }
}

@media (max-width: 480px) {
  .testimonial-card {
    padding: 1.5rem;
  }
  
  .results-card {
    padding: 1.5rem;
  }
  
  .testimonial-text {
    font-size: 1rem;
  }
}

/* Focus states for accessibility */
.testimonial-card:focus-within,
.results-card:focus-within {
  outline: 3px solid #f97316;
  outline-offset: 2px;
}

/* Ensure no border radius (sharp corners) */
* {
  border-radius: 0 !important;
}
</style>